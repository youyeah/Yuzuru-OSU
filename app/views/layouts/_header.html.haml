%nav#mainNav.navbar.navbar-dark.bg-dark.fixed-top
  = link_to "Yuzuru-OSU", root_path, class: "navbar-brand"
  #navbarResponsive.navbar-nav-scroll
    %ul.navbar-nav.ml-auto.flex-row
      %li.nav-item.mx-0.mx-lg-1
        = link_to "教材を探す", search_posts_path, class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"
      - if user_signed_in?
        %li.nav-item.mx-0.mx-lg-1
          = link_to "#{current_user.username} プロフィール", user_path(current_user.id), class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"
        %li.nav-item.mx-0.mx-lg-1
          = link_to "logout", logout_path, method: :delete, class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"
      - else
        %li.nav-item.mx-0.mx-lg-1
          = link_to "SignUp", signup_path, class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"
        %li.nav-item.mx-0.mx-lg-1
          = link_to "LogIn", login_path, class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"
