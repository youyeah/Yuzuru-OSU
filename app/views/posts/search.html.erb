<%= render 'layouts/header' %>
<div class="jumbotron jumbotron-fluid text-bslack rounded bg-light">
    <div class="container">

        <br>
        <div class="row">
          <div class="col-2"></div>
          <div class="col-8">
            <h3 class="display-4 font-italic">Search TextBook</h3>
          </div>
          <div class="col-2"></div>
        </div>

        <div class="panel panel-default">
            <div class="panel-body">
                <%= form_tag search_posts_path, method: :get do %>
                    <div class="form-group row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-8">
                            <p class="col-form-label">教材の名前、講義名を入力してください。</p>
                            <p class="col-form-label">キーワードに関連する募集中の投稿のみを探します！</p>
                        </div>
                        <div class="col-sm-2"></div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-6">
                            <%= text_field_tag :key_words, params[:key_words], placeholder: "書名 や 講義名", autofocus: true,class: "form-control" %>
                        </div>
                        <div class="col-sm-2">
                          <%= submit_tag '検索' , class: "btn btn-block btn-outline-dark" %>
                        </div>
                        <div class="col-sm-2"></div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="container">
  <div class="row">
    
    <% @posts.each do |post| %>
      <div class="col-md-2">
        <% if post.image? %>
          <%= image_tag post.image.thumb100.url %>
        <% else %>
          <div class="text-center">
            <%= image_tag 'noimage_100.png' %>
          </div>
        <% end %>
      </div>
      <div class="col-4">
        <table class="table">
          <thead>
            <tr>
              <th colspan=2>
                <%= link_to post.title, post_path(post.id), class: "font-weight-bold" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
                <td>講義名</td>
                <td><%= post.lecture %></td>
            </tr>
          </tbody>
      </table>
        <br>     
      </div>

    <% end %>
  </div>
</div>


<%= render 'layouts/footer' %>