<%= render 'layouts/header' %>
<div class="jumbotron jumbotron-fluid text-bslack rounded bg-light">
    <div class="container">

        <br>
        <h3 class="display-4 font-italic">Search TextBook</h3>

        <div class="panel panel-default">
            <div class="panel-body">
                <%= form_tag search_posts_path, method: :get do %>
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <p class="col-form-label">タイトル</p>
                        </div>
                        <div class="col-sm-10">
                            <%= text_field_tag :title, params[:title], class: "form-control" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <p class="col-form-label">講義名</p>
                        </div>
                        <div class="col-sm-10">
                            <%= text_field_tag :lecture, params[:lecture], class: "form-control" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            <%= submit_tag '検索' , class: "btn btn-block btn-outline-dark" %>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="container row">
        <% @posts.each do |post| %>
          <% if post.status == "募集中" %>
            <div class="col-4">
              <div class="">
                <h6><%= link_to post.title, post_path(post.id), class: "font-weight-bold" %></h6>
                <p>講義名: <%= post.lecture %></p>
                <p>説 明: <%= post.content %></a></p>
                <p>投稿者: <%= link_to post.provider.username, user_path(post.provider.id) %></p>
              </div>
              <br>     
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>


<%= render 'layouts/footer' %>